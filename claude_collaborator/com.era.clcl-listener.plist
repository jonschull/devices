<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.era.clcl-listener</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/python3</string>
        <string>/Users/admin/ERA_Admin/claude_collaborator/clcl_email_listener.py</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>CLCL_EMAIL</key>
